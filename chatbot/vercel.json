{
  "version": 3,
  "env": {
    "ANTHROPIC_API_KEY": "",
    "KV_REST_API_URL": "",
    "KV_REST_API_TOKEN": ""
  },
  "functions": {
    "chatbot/api/**/*.js": {
      "runtime": "nodejs18.x"
    }
  },
  "routes": [
    {
      "src": "/chatbot/api/(.*)",
      "dest": "/chatbot/api/$1",
      "methods": ["GET", "POST", "OPTIONS"],
      "headers": {
        "Access-Control-Allow-Origin": "https://ai-course.arjunasoknair.com",
        "Access-Control-Allow-Methods": "GET,POST,OPTIONS",
        "Access-Control-Allow-Headers": "Content-Type,Authorization"
      }
    },
    {
      "src": "/chatbot/frontend/(.*)",
      "dest": "/chatbot/frontend/$1",
      "headers": {
        "Cache-Control": "public, max-age=31536000, immutable"
      }
    }
  ]
} 